<h1>*****SuPeR sWaNkY MeNu******</h1>
<% @categories.each do |category| %>
<div>
  <table>
    <thead>
      <h2><%= category.name %></h2>

      <tr>
        <th>Item</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% category.items.each do |item| %>
        <tr>
          <td><%= link_to "#{item.name}", edit_item_path(item) %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
      <%= image_tag "#{category.name.downcase}.jpg" %>
    </tbody>
  </table>
</div>
<% end %>
