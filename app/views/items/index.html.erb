<p id="notice"><%= notice %></p>

<h1>*****SuPeR sWaNkY MeNu******</h1>
<% @meals.each do |list| %>
  <div class="whole-meal">
    <h1> <%= list.name %> </h1>
    <% @categories.each do |category| %>
    <div class="category">
      <table>
        <thead>
          <h2><%= category.name %></h2>

          <tr>
            <th>Item</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="inner-inner-category">
          <% category.items.each do |item| %>
            <% if item.meal_id == list.id %>
              <tr>
                <td><%= link_to "#{item.name}", edit_item_path(item) %></td>
                <td><%= item.price %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <br>
      <br>
    </div>
  </div>

  <% end %>
<% end %>
